<div class="col-lg-6 col-md-6 col-sm-6">
	<div>
		<div>
			<a class="block-20"
			style="background-image: url({{ conseil.lienPhoto }});"
			   data-bs-toggle="modal" data-bs-target="#staticBackdrop"
			></a>
		</div>
		<div class="text d-block ">
			<div class="meta mb-3 d-flex">
				<p>{{ conseil.createdat|date("d/m/Y") }}</p>
				<p>Admin</p>
			</div>
				<h3 class="heading">
					{{ conseil.conseil }}
				</h3>
			 <p class="heading-description mb-30">{{ conseil.presentation }}</p>
			<div class="d-flex justify-between">
				<p>
					<a class="btn btn-primary py-2 px-3" data-bs-toggle="modal" data-bs-target="#staticBackdrop">Voir</a>
				</p>
				<p>
					{% for elementP in conseil.elementPhyto %}
						<em class="text-muted text-primary text-italic">#{{ elementP.name }}</em>
					{% endfor %}
				</p>
				<p>
					{% for elementBase in conseil.elementBase %}
						<a class="btn btn-primary py-2 px-3" style="background: {{ elementBase.color }} !important;">{{ elementBase.name }}</a>
					{% endfor %}
				</p>
			</div>
		</div>
	</div>
</div>
<!-- Modal -->
<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="staticBackdropLabel">Visionnage vid√©o</h5>
				<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
			</div>
			<div class="modal-body">
				<iframe width="465" height="315" src="{{ conseil.lienVideo }}" title="{{ conseil.conseil }}" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
			</div>
			{# <div class="modal-footer">
						        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
						      </div> #}
		</div>
	</div>
</div>
