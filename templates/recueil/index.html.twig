{% extends 'base.html.twig' %}

{% block title %}Terre d'Avalonne - Recueil{% endblock %}

{% block body %}
	{#              HEAD             #}
	<div class="container js-filter">
		{{ include ('template/_head_page.html.twig', {title: 'Dico et histoire botanique'}) }}

		{#              BAR_FILTER             #}
		<div class="row">
			<div class="col-lg-3 col-md-5">
				<div class="row js-filter-form filter">
					{% include 'recueil/_recueil_bar_filter.html.twig' with {form: form, recueils: recueils} only %}
				</div>
			</div>
			<div class="col-lg-9 col-md-7 ">
				<div class="row js-filter-content">
					{% include 'recueil/_recueils.html.twig'%}
				</div>
				<div class="row mt-30 float-right">
					<div class="js-filter-pagination">
						{{ knp_pagination_render(pagination, 'recueil/_pagination.html.twig') }}
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
