<div class="col-lg-6 col-md-6 col-sm-6">
	<div>
		<div>
			<a class="block-20" style="background-image: url({{ recette.lienPhoto }});" data-bs-toggle="modal" data-bs-target="#staticBackdrop"></a>
		</div>
		<div class="text d-block ">
			<div class="meta mb-3 d-flex">
				<p>{{ recette.createdat|date("d/m/Y") }}</p>
				<p>Admin</p>
			</div>
			<h3 class="heading">
				{{ recette.name }}
			</h3>
			<p class="heading-description mb-30">{{ recette.presentation }}</p>
			<div class="d-flex justify-between">
				<p>
					<a class="btn btn-primary py-2 px-3" href="{{ path("app_recipe_details", {id: recette.id}) }}">Voir</a>
				</p>
				<p>
					{% if recettes.0.elementPhyto is defined %}
						{% for elementP in recette.elementPhyto %}
							<em class="text-muted text-primary text-italic">#{{ elementP.name }}</em>
						{% endfor %}
					{% endif %}
				</p>
				<p>
					{% if recettes.0.elementBase is defined %}
						{% for elementBase in recette.elementBase %}
							<a class="btn btn-primary py-2 px-3" style="background: {{ elementBase.color }} !important;">{{ elementBase.name }}</a>
						{% endfor %}
					{% endif %}
				</p>
			</div>
		</div>
	</div>
</div>
