{% extends 'base.html.twig' %}

{% block title %}Terre d'Avalonne - Inscription
{% endblock %}

{% block body %}
	<div class="half">
		<div class="bg order-1 order-md-2 bg-cover bg-center overflow-hidden float-right" style="background-image:url({{asset('img/bg_1.jpg')}});">
		</div>
		<div class="contents order-2 order-md-1">
			<div class="container">
				<div class="items-center justify-center">
				<h3>Inscription</h3>
				<p class="mb-4">Lorem ipsum dolor sit amet elit. Sapiente sit aut eos consectetur adipisicing.</p>
				{{ form_start(registrationForm) }}
				<div class="row">
					<div class="col-md-6">
						<div class="form-group first">
							{{ form_row(registrationForm.Firstname, {'attr': {'class': 'form-control', 'placeholder': "e.g. John"}}) }}
						</div>
					</div>
					<div class="col-md-6">
						<div class="form-group first">
							{{ form_row(registrationForm.lastname, {'attr': {'class': 'form-control', 'placeholder': "e.g. Smith"}}) }}
						</div>
					</div>
				</div>
				<div class="row">
					<div class="col-md-6">
						<div class="form-group first">
							{{ form_row(registrationForm.email, {'attr': {'class': 'form-control', 'placeholder': "e.g. john@your-domain.com"}}) }}
						</div>
					</div>
					<div class="col-md-6">
						<div class="form-group first">
							{{ form_row(registrationForm.phone, {'attr': {'class': 'form-control', 'placeholder': "+33 6 49 58 43 20"}}) }}
						</div>
					</div>
				</div>
				<div class="row">
					<div class="col-md-6">
						<div class="form-group first">
							{{ form_row(registrationForm.civility, {'attr': {'class': 'form-control'}}) }}
						</div>
					</div>
					<div class="col-md-6">
						<div class="form-group first">
							{{ form_row(registrationForm.birthday, {'attr': {'class': 'form-control'}}) }}
						</div>
					</div>
				</div>
				<div class="row">
					<div class="col-md-6">
						<div class="form-group first">
							{{ form_row(registrationForm.address, {'attr': {'class': 'form-control'}}) }}
						</div>
					</div>
					<div class="col-md-6">
						<div class="form-group first">
							{{ form_row(registrationForm.zip, {'attr': {'class': 'form-control'}}) }}
						</div>
					</div>
				</div>
				<div class="row">
					<div class="col-md-6">
						<div class="form-group first">
							{{ form_row(registrationForm.city, {'attr': {'class': 'form-control'}}) }}
						</div>
					</div>
					<div class="col-md-6">
						<div class="form-group first">
							{{ form_row(registrationForm.country, {'attr': {'class': 'form-control'}}) }}
						</div>
					</div>
				</div>
				<div class="row">
					<div class="col-md-6">
						<div class="form-group first">
							{{ form_row(registrationForm.professionId, {'attr': {'class': 'form-control'}}) }}
						</div>
					</div>
				</div>
				<div class="row">
					<div class="col-md-6">
						<div class="form-group last mb-3">

							{{ form_row(registrationForm.plainPassword, {label: 'Password', 'attr': {'class': 'form-control'}}) }}
						</div>
					</div>
					<div class="col-md-6">

						<div class="form-group last mb-3">
							<label for="re-password">Re-type Password</label>
							<input type="password" class="form-control" placeholder="Your Password" id="re-password">
						</div>
					</div>
				</div>

				<div class="d-flex mb-5 mt-4 align-items-center">
					<div class="d-flex align-items-center">
						{{ form_row(registrationForm.agreeTerms) }}
						{#<label class="control control--checkbox mb-0"><span class="caption">Creating an account means you're okay with our <a href="#">Terms and Conditions</a> and our <a href="#">Privacy Policy</a>.</span>
							<input type="checkbox" checked="checked">
							<div class="control__indicator"></div>
						</label#}
					</div>
				</div>
				<input type="submit" value="Register" class="btn px-5 btn-primary">

				{% for flash_error in app.flashes('verify_email_error') %}
					<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
				{% endfor %}

				{# <button type="submit" class="btn">Register</button> #}
				{{ form_end(registrationForm) }}
			</div>
		</div>
	</div>


{% endblock %}
