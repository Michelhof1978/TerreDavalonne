<div class="col-lg-6 col-md-6 col-sm-6">

	<div>
		<div>
			{% if not product.images.0  %}
				<img class="rounded-3" src="{{ asset("/images/products/" ~ product.images.0) }}"  alt="product-pictures"/>
			{% else %}
				<img class="rounded-3" src="{{ asset('images/not_found_picture.png') }}"  alt="plants-pictures-not-found"/>
			{% endif %}
		</div>
		<div class="text d-block ">
			<div class="meta mb-3 d-flex">
				<p>{{ product.createdat|date("d/m/Y") }}</p>
				<p>Admin</p>
			</div>
			<h3 class="heading">
				{{ product.name }}
			</h3>
			<p class="heading-description mb-30">{{ product.presentation }}</p>
			<div class="d-flex justify-between">
				<p>
					<a class="btn btn-primary py-2 px-3" href="{{ path("app_products_details", {id: product.id}) }}">Voir</a>
				</p>
				<p>
					{% for elementP in product.elementPhyto %}
						<em class="text-muted text-primary text-italic">#{{ elementP.name }}</em>
					{% endfor %}
				</p>
				<p>
					<em class="text-muted text-primary text-italic">{{ product.price }} â‚¬</em>

				</p>
				<p>
					{% for elementS in product.elementSabbat %}
						<em class="text-muted text-primary text-italic">#{{ elementS.name }}</em>
					{% endfor %}
				</p>
				<p>
					{% for elementBase in product.elementBase %}
						<a class="btn btn-primary py-2 px-3" style="background: {{ elementBase.color }} !important;">{{ elementBase.name }}</a>
					{% endfor %}
				</p>
			</div>
		</div>
	</div>
</div>
